{% extends '@CreavoMultiApp/base.html.twig' %}
{% form_theme form '@CreavoMultiApp/partials/bootstrap_3_vertical_layout.html.twig' %}

{% block crv_ma_header %}
    <div class="page-header">
        <h1>{{ appEntity.itemSingularName }} {{ item.itemId }}</h1>
    </div>
{% endblock %}

{% block crv_ma_body %}

    {% include '@CreavoMultiApp/partials/breadcrumbs.html.twig' %}

    {% include '@CreavoMultiApp/item/nav.html.twig' %}

    {{ form_start(form) }}

    <p>
        <strong>
            Dieses Element wirklich endgültig löschen?
        </strong>
    </p>

    {{ form_widget(form) }}

    <button class="btn btn-danger">
        <i class="glyphicon glyphicon-floppy-disk"></i> Endgültig löschen
    </button>
    {{ form_end(form) }}


{% endblock %}
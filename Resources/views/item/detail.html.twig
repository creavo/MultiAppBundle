{% extends '@CreavoMultiApp/base.html.twig' %}

{% block crv_ma_header %}
    <div class="page-header">
        <h1>{{ appEntity.itemSingularName }} {{ item.itemId }}</h1>
    </div>
{% endblock %}

{% block crv_ma_body %}

    {% include '@CreavoMultiApp/partials/breadcrumbs.html.twig' %}

    <p class="text-right">
        Zuletzt bearbeitet am {{ item.createdAt|date('d.m.Y, H:i') }} Uhr
        {% if item.createdBy %}
            von {{ item.createdBy }}
        {% endif %}
    </p>

    <div class="row">
        <div class="col-sm-8">

            {% for appField in appFields %}
                <div class="row">
                    <div class="col-sm-3">
                        <strong>{{ appField.name }}</strong>
                    </div>
                    <div class="col-sm-9">
                        {{ appField|crv_ma_format('-') }}
                    </div>
                </div>

                <p><br /></p>
            {% endfor %}

        </div>
        <div class="col-sm-4">

        </div>
    </div>


{% endblock %}
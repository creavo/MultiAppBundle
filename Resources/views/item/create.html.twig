{% extends '@CreavoMultiApp/base.html.twig' %}
{% form_theme form '@CreavoMultiApp/partials/bootstrap_3_horizontal_layout.html.twig' %}

{% block crv_ma_header %}
    <div class="page-header">
        <h1>{{ appEntity.itemSingularName }} erstellen</h1>
    </div>
{% endblock %}

{% block crv_ma_body %}

    {% include '@CreavoMultiApp/partials/breadcrumbs.html.twig' with {'current': appEntity.itemSingularName~' erstellen'} %}

    {{ form_start(form) }}

    {{ form_widget(form) }}

    <button class="btn btn-primary" name="redirect" value="detail">
        <i class="glyphicon glyphicon-floppy-disk"></i> Speichern
    </button>
    <button class="btn btn-primary" name="redirect" value="list">
        <i class="glyphicon glyphicon-floppy-disk"></i> Speichern und zur Liste
    </button>
    <button class="btn btn-primary" name="redirect" value="create">
        <i class="glyphicon glyphicon-floppy-disk"></i> Speichern und neu erstellen
    </button>
    {{ form_end(form) }}


{% endblock %}